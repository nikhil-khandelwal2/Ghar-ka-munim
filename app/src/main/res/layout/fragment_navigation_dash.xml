<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_navigation_dash_expense"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/button_round"
        android:text="Expense"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"/>


    <Button
        android:id="@+id/btn_navigation_dash_getoffers"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/button_round"
        android:text="Get Offers"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:layout_below="@+id/btn_navigation_dash_expense"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="22dp"/>


    <Button
        android:id="@+id/btn_navigation_dash_earnings"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/button_round"
        android:text="Earnings"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:layout_below="@+id/btn_navigation_dash_getoffers"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="22dp"/>


    <Button
        android:id="@+id/btn_navigation_dash_chatfriends"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/button_round"
        android:text="Chat Friends"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:layout_below="@+id/btn_navigation_dash_earnings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="22dp"/>
</RelativeLayout>
