<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8f2431"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="40dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@mipmap/logo3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Welcome"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_gravity="center"/>


    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:background="#fbf8f1"
        >

        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            >
        <EditText
            android:id="@+id/input_email"
            android:layout_width="240dp"
            android:layout_height="49dp"
            android:background="#ffffff"
            android:hint="Email"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:textSize="14dp"
            android:drawableRight="@mipmap/email"
            android:drawablePadding="@dimen/cardview_compat_inset_shadow"
            />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            >

        <EditText
            android:id="@+id/input_password"
            android:layout_width="240dp"
            android:layout_height="49dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="14dp"
            android:background="#fff"
            android:layout_gravity="center"
            />
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_login_user"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="#8e2330"
            android:text="Login"
            android:textColor="#ffffff"
            android:textSize="15dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="322dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:shadowRadius="10"
            />
        <TextView
            android:id="@+id/btn_forgot_pass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FORGOT PASSWORD?"
            android:textSize="13dp"
            android:layout_marginTop="190dp"
            android:textColor="#c0b1b1"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#fbf8f1">

        <Button
            android:id="@+id/create_new_acc"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="CREATE NEW ACCOUNT"
            android:textAlignment="center"
            android:textSize="14dip"
            android:textColor="#c0b1b1"
            android:background="#fbf8f1"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/btn_get_offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET OFFERS"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:fontFamily="serif-monospace"
        />

</LinearLayout>