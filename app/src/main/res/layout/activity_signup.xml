<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8f2431"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="30dp"
        android:src="@mipmap/logo3"
        />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Registration"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:layout_below="@id/img"
        android:layout_marginTop="-35dp"
        android:layout_centerHorizontal="true"

        />

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_below="@id/txt"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#fbf8f1"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btn_frag_cstm"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="CUSTOMER"
            />

        <Button
            android:id="@+id/btn_frag_shpkpr"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="SHOPKEEPER"
            android:layout_marginLeft="150dp"/>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_centerHorizontal="true"
        android:id="@+id/card2"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="255dp"
        android:layout_marginTop="8dp"
        android:background="#fcf9f4"
        android:layout_below="@id/card1"
        >

       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/fragment_registeration">

       </FrameLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card3"
        android:layout_below="@id/card2"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#fbf8f1"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/link_signup"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#fbf8f1"
            android:text="Verify Mobile Number"
            android:textAlignment="center"
            android:textColor="#8f2531"
            android:textSize="14dip" />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_below="@id/card3"
        android:id="@+id/offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET OFFERS"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:fontFamily="serif-monospace"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>