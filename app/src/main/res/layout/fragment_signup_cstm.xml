<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_signup_cstm1"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/btn_frag_cstm_name"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:drawableRight="@mipmap/user_icon"
            android:focusableInTouchMode="true"
            android:hint="Name"
            android:textSize="12dp"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/card_signup_cstm1"
        android:id="@+id/card_signup_cstm2"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp">

        <EditText
            android:id="@+id/btn_frag_cstm_email"
            android:layout_width="240dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:drawableRight="@mipmap/email"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textSize="12dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/card_signup_cstm2"
        android:id="@+id/card_signup_cstm3"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="-45dp"
        >

        <EditText
            android:id="@+id/btn_frag_cstm_mobile"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/cellphone"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:background="#fff"
            android:textSize="12dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_signup_cstm4"
        android:layout_below="@id/card_signup_cstm3"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp">

        <EditText
            android:id="@+id/btn_frag_cstm_address"
            android:layout_width="240dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:background="#fff"
            android:drawableRight="@mipmap/home"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textSize="12dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/card_signup_cstm4"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true">


        <Spinner
            android:id="@+id/gender"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:text="Gender"
            android:textSize="12dp"

            />

    </android.support.v7.widget.CardView>
</RelativeLayout>
