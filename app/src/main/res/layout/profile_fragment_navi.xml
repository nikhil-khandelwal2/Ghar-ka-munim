<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/erp_blog"/>

</android.support.v7.widget.CardView>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/customer_profile"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/person2"
        android:layout_marginTop="115dp"
        android:elevation="3dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp">

        <RelativeLayout
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:text="Amit Kumar"
                android:textColor="#332e44"
                android:textSize="30dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_type_person_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_customer_name"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="(Customer)"
                android:textColor="#332e44"
                android:textSize="18dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_quote_profile"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_type_person_profile"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:text="What a meaningless sense if losing myself, though owing all of the world"
                android:textColor="#928f96"
                android:textSize="14dp" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txt_quote_profile"
                android:background="#928f96" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="999"
                android:textColor="#332e44"
                android:textSize="25dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nine"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-10dp"
                android:text="Friends"
                android:textColor="#928f96"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/friends"
                android:layout_marginTop="10dp"
                android:background="#928f96" />

            <TextView
                android:id="@+id/customer_profie_emaill"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@id/line2"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="Email"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/customer_profie_email"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignStart="@+id/customer_profile_address"
                android:layout_alignTop="@+id/customer_profie_emaill"
                android:text="demo@gmail.com"
                android:textColor="#332e44"
                android:textSize="18dp"
                android:layout_alignLeft="@+id/customer_profile_address" />


            <TextView
                android:id="@+id/customer_profile_addresss"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@+id/customer_profie_email"
                android:paddingLeft="20dp"
                android:text="Address"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/customer_profile_address"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/customer_profie_emaill"
                android:layout_toEndOf="@+id/nine"
                android:text="Laxmi Nagar"
                android:textColor="#332e44"
                android:textSize="18dp"
                android:layout_toRightOf="@+id/nine" />


            <TextView
                android:id="@+id/customer_profile_contactt"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/customer_profile_addresss"
                android:paddingLeft="20dp"
                android:text="Contact Number"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/customer_profile_contact"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignStart="@+id/customer_profie_email"
                android:layout_alignTop="@+id/customer_profile_contactt"
                android:text="+91-9856321470"
                android:textColor="#332e44"
                android:textSize="18dp"
                android:layout_alignLeft="@+id/customer_profie_email" />

            <Button
                android:id="@+id/btn_edit_id"
                android:layout_width="350dp"
                android:layout_height="42dp"
                android:textColor="#fff"
                android:background="#8e2330"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/customer_profile_contactt"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/btn_edit_id"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
</ScrollView>
